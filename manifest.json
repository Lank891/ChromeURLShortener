{
	"manifest_version": 2,
	"name": "URL Shortener",
	"version": "1.0",
	
	"description": "Allows you to shorten URL quickly",
	"icons":
	{
		"16": "icon16.png",
		"48": "icon48.png",
        "128": "icon128.png"
	},
	
	
	"browser_action":
	{
		"default_icon": "icon.png",
		"default_title": "URL Shortener",
		"default_popup": "popup.html"
	},
	
	"author": "Andrzej Litkowski",
	
	
	
	"permissions":
	[
		"activeTab",
		"clipboardWrite",
		"tabs",
		"http://*/*"
	]
}